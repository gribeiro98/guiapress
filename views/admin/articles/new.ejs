<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="post">
                <input class="form-control" type="text" name="title" placeholder="TÃ­tulo da artigo">
                <br>
                <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui" id="article"></textarea>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector: "#article",
        language: 'pt_BR',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons',
        ]
    })
</script>

